<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <Button
        android:id="@+id/global"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="78dp"
        android:background="@drawable/global_flag"
        app:layout_constraintBottom_toTopOf="@+id/india"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/india"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/indian_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/global" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:layout_marginBottom="80dp"
        android:text="Choose the one to show the statistics for"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/global"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>